{% schema %}
{
  "name": "Image Text Section",
  "settings": [
    {
      "type": "image_picker",
      "label": "Mobile Image",
      "id": "mobile_image",
      "default": "img/image-text-mobile.svg",
      "info": "Upload an image for mobile view"
    },
    {
      "type": "image_picker",
      "label": "Desktop Image",
      "id": "desktop_image",
      "default": "img/image-text-desktop.svg",
      "info": "Upload an image for desktop view"
    },
    {
      "type": "text",
      "label": "Section Title",
      "id": "section_title",
      "default": "Handcrafted and Responsibly Sourced",
      "info": "Enter the title for the section"
    },
    {
      "type": "textarea",
      "label": "Main Text",
      "id": "main_text",
      "default": "On the other hand, we denounce with righteous indignation and dislike men who are so beguiled and demoralized by the charms of pleasure of the moment, so blinded by desire, that they cannot foresee the pain and trouble that are bound to ensue; and equal blame belongs to those who fail in their duty through weakness of will, which is the same as saying through shrinking from toil and pain.",
      "info": "Enter the text that describes your section."
    },
    {
      "type": "text",
      "label": "Button Text",
      "id": "button_text",
      "default": "Learn more",
      "info": "Text to display on the button"
    },
    {
      "type": "textarea",
      "label": "Additional Text",
      "id": "additional_text",
      "default": "On the other hand, we denounce with righteous indignation and dislike men who are so beguiled and demoralized by the charms of pleasure of the moment, so blinded by desire, that they cannot foresee the pain and trouble that are bound to ensue; and equal blame belongs to those who fail in their duty through weakness of will, which is the same as saying through shrinking from toil and pain.",
      "info": "Enter the additional text displayed below the button"
    },
    {
      "type": "color",
      "label": "Background Color",
      "id": "background_color",
      "default": "#F8B5D1",
      "info": "Choose a background color for the section"
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}
